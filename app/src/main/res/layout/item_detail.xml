        android:text="@string/item_detail_date_creation"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_date_creation_title_txt" />

    <TextView
        android:id="@+id/item_detail_realtor_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/item_detail_realtor_title_creation"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/item_detail_realtor_creation_txt"
