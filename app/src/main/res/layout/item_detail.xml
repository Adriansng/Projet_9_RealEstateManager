        app:layout_constraintBottom_toBottomOf="@+id/item_detail_price_txt"
        app:layout_constraintEnd_toStartOf="@+id/item_detail_price_txt"
        app:layout_constraintTop_toTopOf="@+id/item_detail_price_txt" />

    <TextView
        android:id="@+id/item_detail_price_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/item_detail_price_txt"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_photos_rv" />

    <TextView
        android:id="@+id/item_detail_description_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/item_detail_description_title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_type_title_txt" />

    <TextView
        android:id="@+id/item_detail_description_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/item_detail_description_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_description_title_txt" />

    <ImageView
        android:id="@+id/item_detail_surface_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/baseline_aspect_ratio_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_detail_description_txt"
        android:contentDescription="@string/description_item_detail_surface" />

    <TextView
        android:id="@+id/item_detail_surface_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:text="@string/item_detail_surface_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_detail_surface_iv"
        app:layout_constraintEnd_toStartOf="@+id/item_detail_location_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_detail_surface_iv"
        app:layout_constraintTop_toTopOf="@+id/item_detail_surface_iv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_detail_surface_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/item_detail_surface_txt"
