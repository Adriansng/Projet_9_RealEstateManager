<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/loan_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/loan_title"
        app:titleTextColor="@color/colorAccentWhite" />


    <TextView
        android:id="@+id/loan_amount_txt"
        style="@style/theme_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/loan_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_toolbar" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loan_amount_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/loan_amount_txt"
        app:layout_constraintStart_toEndOf="@+id/loan_amount_txt"
        app:layout_constraintTop_toTopOf="@+id/loan_amount_txt" />


    <TextView
        android:id="@+id/loan_device_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dollar"
        app:layout_constraintBottom_toBottomOf="@+id/loan_amount_edit_text"
        app:layout_constraintStart_toEndOf="@+id/loan_amount_edit_text"
        app:layout_constraintTop_toTopOf="@+id/loan_amount_edit_text" />


    <TextView
        android:id="@+id/loan_contribution_txt"
        style="@style/theme_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/loan_contribution"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_amount_edit_text" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loan_contribution_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:maxEms="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/loan_contribution_txt"
        app:layout_constraintEnd_toStartOf="@+id/loan_device_txt"
        app:layout_constraintStart_toEndOf="@+id/loan_contribution_txt"
        app:layout_constraintTop_toTopOf="@+id/loan_contribution_txt" />


    <TextView
        android:id="@+id/loan_contribution_device_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dollar"
        app:layout_constraintBottom_toBottomOf="@+id/loan_contribution_edit_text"
        app:layout_constraintStart_toEndOf="@+id/loan_contribution_edit_text"
        app:layout_constraintTop_toTopOf="@+id/loan_contribution_edit_text" />


    <TextView
        android:id="@+id/loan_interest_txt"
        style="@style/theme_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/loan_interest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_contribution_edit_text" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loan_interest_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="4"
        android:maxEms="4"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/loan_interest_txt"
        app:layout_constraintStart_toEndOf="@+id/loan_interest_txt"
        app:layout_constraintTop_toTopOf="@+id/loan_interest_txt" />


    <TextView
        android:id="@+id/loan_interest_device_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/loan_pourcentage"
        app:layout_constraintBottom_toBottomOf="@+id/loan_interest_edit_text"
        app:layout_constraintStart_toEndOf="@+id/loan_interest_edit_text"
        app:layout_constraintTop_toTopOf="@+id/loan_interest_edit_text" />

    <TextView
        android:id="@+id/loan_term_txt"
        style="@style/theme_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/loan_term"
        app:layout_constraintBottom_toBottomOf="@+id/loan_interest_device_txt"
        app:layout_constraintStart_toEndOf="@+id/loan_interest_device_txt"
        app:layout_constraintTop_toTopOf="@+id/loan_interest_device_txt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loan_term_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="2"
        android:maxEms="2"
        app:layout_constraintBottom_toBottomOf="@+id/loan_term_txt"
        app:layout_constraintStart_toEndOf="@+id/loan_term_txt"
        app:layout_constraintTop_toTopOf="@+id/loan_term_txt" />

    <TextView
        android:id="@+id/loan_term_device_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/loan_years"
        app:layout_constraintBottom_toBottomOf="@+id/loan_term_edit_text"
        app:layout_constraintStart_toEndOf="@+id/loan_term_edit_text"
        app:layout_constraintTop_toTopOf="@+id/loan_term_edit_text" />

    <ImageView
        android:id="@+id/loan_button_calcul_iv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_calculate_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_interest_edit_text"
        android:contentDescription="@string/description_button_calcul" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_button_calcul_iv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/loan_calcul_interest_title_txt"
                style="@style/theme_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/loan_interest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loan_calcul_interest_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/loan_calcul_interest_title_txt"
                app:layout_constraintStart_toEndOf="@+id/loan_calcul_interest_title_txt"
                app:layout_constraintTop_toTopOf="@+id/loan_calcul_interest_title_txt" />

            <TextView
                android:id="@+id/loan_calcul_mount_title_txt"
                style="@style/theme_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/loan_per_month"
                app:layout_constraintStart_toStartOf="@+id/loan_calcul_interest_title_txt"
                app:layout_constraintTop_toBottomOf="@+id/loan_calcul_interest_title_txt" />

            <TextView
                android:id="@+id/loan_calcul_mount_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/loan_calcul_mount_title_txt"
                app:layout_constraintStart_toEndOf="@+id/loan_calcul_mount_title_txt"
                app:layout_constraintTop_toTopOf="@+id/loan_calcul_mount_title_txt" />

            <TextView
                android:id="@+id/loan_total_title_txt"
                style="@style/theme_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/loan_total_amount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/loan_calcul_mount_title_txt"
                app:layout_constraintTop_toBottomOf="@+id/loan_calcul_mount_title_txt" />

            <TextView
                android:id="@+id/loan_calcul_total_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/loan_total_title_txt"
                app:layout_constraintStart_toEndOf="@+id/loan_total_title_txt"
                app:layout_constraintTop_toTopOf="@+id/loan_total_title_txt" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>